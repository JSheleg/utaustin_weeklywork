  {{#each library as |library|}}
  {{#if read}}
  {{!-- <li>
    <p>Title: {{title}}</p>
    <p>Author: {{author}}</p>
    <p>Read: {{read}}</p>
  </li> --}}
  {{!-- partial added, partial object --}}
  {{> book-block library}}
  {{!-- OR {{> books/book-block}} --}}
